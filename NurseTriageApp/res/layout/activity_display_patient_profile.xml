<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nursetriageapp.DisplayPatientProfile" >

    <TextView
        android:id="@+id/textViewpatientdob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewdob"
        android:layout_alignBottom="@+id/textViewdob"
        android:layout_toRightOf="@+id/textViewdob"
        android:text="No Value"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/patientmedicalhistorybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/createhistorybutton"
        android:layout_alignLeft="@+id/textViewdob"
        android:layout_marginBottom="30dp"
        android:text="Check patient&apos;s medical history"
        android:textSize="14sp" />

    <Button
        android:id="@+id/createhistorybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/updatebutton"
        android:layout_alignLeft="@+id/patientmedicalhistortbutton"
        android:layout_marginBottom="22dp"
        android:text="Create new history"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewUserName"
        android:layout_alignParentTop="true"
        android:text="Patient Profile"
        android:gravity="center"
        android:textSize="30sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/updatebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createhistorybutton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:text="Update the Newest Info"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewdob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/patientmedicalhistorybutton"
        android:layout_alignLeft="@+id/uhiptextView"
        android:layout_marginBottom="19dp"
        android:text="Date of Birth:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/uhiptextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewpatientdob"
        android:layout_alignLeft="@+id/PatientNametextView"
        android:layout_marginBottom="16dp"
        android:text="Health Card Number:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/PatientNametextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/uhiptextView"
        android:layout_alignLeft="@+id/createhistorybutton"
        android:layout_marginBottom="25dp"
        android:text="@string/patientname"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PatientNametextView"
        android:layout_alignBottom="@+id/PatientNametextView"
        android:layout_toRightOf="@+id/PatientNametextView"
        android:text="@string/novalue"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/patientuhiptextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/uhiptextView"
        android:layout_alignBottom="@+id/uhiptextView"
        android:layout_toRightOf="@+id/uhiptextView"
        android:text="@string/novalue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

</RelativeLayout>
